    # Database
    POSTGRES_HOST=postgres
    POSTGRES_PORT=5432
    POSTGRES_USER=teaching_user
    POSTGRES_PASSWORD=teaching_password
    POSTGRES_DB=teaching_db
    DATABASE_URL=postgresql://teaching_user:teaching_password@postgres:5432/teaching_db
    ASYNC_DATABASE_URL=postgresql+asyncpg://teaching_user:teaching_password@postgres:5432/teaching_db

    # JWT
    SECRET_KEY=your-secret-key-here-change-in-production
    ACCESS_TOKEN_EXPIRE_MINUTES=45
    ALGORITHM=HS256
    PASSWORD_MIN_LENGTH=8

    # Redis (опционально)
    REDIS_URL=redis://redis:6379/0

    # Yandex Object Storage (S3-совместимое)
    # Получите эти данные в Yandex Cloud Console: https://console.cloud.yandex.ru/
    S3_ENDPOINT=https://storage.yandexcloud.net
    S3_ACCESS_KEY_ID=your-access-key-id
    S3_SECRET_ACCESS_KEY=your-secret-access-key
    S3_BUCKET_NAME=your-bucket-name
    S3_REGION=ru-central1
